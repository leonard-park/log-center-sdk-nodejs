{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./bin",
    "declaration": true,
    "declarationDir": "./bin",
    "emitDeclarationOnly": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "bin"
  ]
}
